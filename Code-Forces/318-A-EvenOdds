#include<bits/stdc++.h>
using namespace std ;

int main()
{
    double n;
    long long k;
    cin >> n >> k;
    long long int odd = ceil(n/2);
    if( k <= odd )
    {
        cout << ( 2 * k ) - 1 << endl;
    }
    else
    {
        k = k - odd ; 
        cout << 2 * k << endl;
    }
    return 0;
}
